<div class="Joke-container container">
  <h1>Add a Joke</h1>
    <div class="mb-3">
      <input
        placeholder="Joke title"
        name="joke_name"
        class="form-control"
        id="Joke_name"
        type="text"
      />
    </div>
    <div>
      <label>How many characters:</label>
      <button id="use-existing">Use Existing</button>
      <select id="select-char-number">
        <option selected disabled>Select Number of Characters</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>

    <section id="characters">
      <!-- form elements here -->
    </section>
    <form action="/func/create" method="POST" enctype="multipart/form-data">

    <div id="Joke-form-content" class="mb-3">
      <div class="joke-body">
        <div class="joke-body-iteration">
        <select>
          <%for(Character of characters){%>
          <option value="<%= Character %>"><%= Character %></option>
          <%}%>
        </select>
        <input placeholder="Joke">
        <button id="addJoke">Add another line of Joke</button>
      </div>
      </div>
    </div>
    <div class="mb-3">
      <input name="joke" class="form-control" type="file" id="joke" />
    </div>
    <button class="btn btn-primary">Add a Joke</button>
  </form>
  <hr />
  <div class="joke-content" style="margin-top: 50px">
    <div class="container text-center">
      <div class="row">
        <%for(joke of jokes){%>
        <div class="col">
          <div class="card" style="width: 18rem; margin-top: 20px">
            <img
              src="<%=joke.joke_image%>"
              class="card-img-top"
              alt="<%=joke.joke_image%>"
            />
            <div class="card-body">
              <h5 class="card-title"><%=joke.joke_title%></h5>
              <p class="card-text"><%=joke.joke_description%></p>
              <%= joke.id %> <%= joke._id %>
              <form action="/func/editform/<%=joke.id%>" method="POST">
                <button class="btn btn-primary">Edit</button>
              </form>
              <form action="/func/delete" method="POST">
                <button class="btn btn-danger">Delete</button>
                <input type="hidden" name="joke_id" value="<%=joke.id%>" />
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script src="/js/characterDisplay.js"></script>
<link rel="stylesheet" href="/css/addJoke.css" />
